<%= render "navbar" %>

<div class="container mb-3">

  <%#= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="container my-3">
    <div class="card text-white" style="width: 25rem;">
      <%= cl_image_tag @cocktail.photo.key, class: "card-img-top" %>
      <!-- <img class="card-img-top" src="https://images.unsplash.com/photo-1578664182391-acdf392468a0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="Card image cap"> -->
      <div class="card-img-overlay">
          <h5 class="card-title"><%= @cocktail.name %></h5>
      </div>
    </div>
  </div>

  <div class="container my-3">
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
      <%= link_to "New Dose", new_cocktail_dose_path(@cocktail.id), class: "btn btn-sm btn-outline-secondary" %>
      <%= link_to "List", cocktails_path, class: "btn btn-sm btn-outline-secondary" %>
    </div>

  </div>

  <div class="container">
    <h3>Ingredients</h3>
    <div class="list-group">
      <% @cocktail.doses.each do |dose| %>
        <p class= "list-group-item list-group-item-action">
          <%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to "Delete", dose_path(dose), method: :delete, data: {confirm: "are you sure?"}  %>
        </p>
      <% end %>
    </div>
  </div>

</div>
